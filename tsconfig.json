{
  "extends": "@tsconfig/react-native/tsconfig.json",
    "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "es2017"
    ],
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true, 
    "experimentalDecorators": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "baseUrl": ".",
    "paths": {
      "@utils/*": [
        "./src/utils/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@store/*": [
        "./src/store/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@theme/*": [
        "./src/theme/*"
      ],
      "@navigation": [
        "./src/navigation"
      ],
      "@screens/*": [
        "./src/screens/*"
      ],
      "@database": [
          "./src/database"
      ],
      "@mocks/*": [
          "./src/mocks/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
  ]
}
